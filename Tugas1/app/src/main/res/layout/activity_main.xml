<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanti.tugas1.MainActivity"
    android:weightSum="1"
    android:background="@drawable/dua"
   >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/biodata"
        android:textColor="@color/huruf"

        android:gravity="center"
        android:id="@+id/TxtBiodata"
        />


    <ImageView
        android:layout_width="139dp"
        android:layout_height="157dp"
        android:id="@+id/ImgFoto"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/tantibulet" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama"
                android:textColor="@color/huruf"
                android:id="@+id/TxtNama"

            android:textSize="20sp"/>





            <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:id="@+id/EdtNama"
                        android:textColor="@color/huruf"
                        android:layout_marginLeft="43dp"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emaill"
            android:id="@+id/TxtEmail"
            android:textColor="@color/huruf"

            android:textSize="20sp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/huruf"
                android:textSize="20sp"
                android:id="@+id/EdtEmail"
                android:layout_marginLeft="45dp"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nim"
            android:id="@+id/TxtNIM"
            android:textColor="@color/huruf"
            android:textSize="20sp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="20sp"
                android:id="@+id/EdtNIM"
                android:textColor="@color/huruf"
                android:layout_marginLeft="58dp"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angkatan"
            android:id="@+id/TxtAngkatan"
            android:textColor="@color/huruf"
            android:textSize="20sp"
            android:layout_margin="5dp"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="20sp"
                android:id="@+id/EdtAngkatan"
                android:textColor="@color/huruf"
                android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tampil"
        android:textColor="@color/huruf"
        android:background="@color/colorAccent"
        android:id="@+id/BtnTampil"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
